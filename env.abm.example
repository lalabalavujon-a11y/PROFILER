# ABM (Account-Based Marketing) Environment Variables
# Copy this to .env and configure with your actual values

# =============================================================================
# REQUIRED ABM CONFIGURATION
# =============================================================================

# ABM Authentication Token (generate a secure random string)
ABM_TOKEN=your_secure_abm_token_here

# HMAC Secret for webhook verification (generate a secure random string)
ABM_HMAC_SECRET=your_hmac_secret_for_webhooks

# Your site URL (used for API endpoints and webhooks)
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# n8n Integration (for workflow automation)
N8N_ABM_EVENT_URL=https://your-n8n-instance.com/webhook/abm-events

# Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key
DIGEST_FROM=insights@your-domain.com
ABM_WEEKLY_TO=ops@your-domain.com,gm@your-domain.com

# GoHighLevel CRM Integration
GHL_API_KEY=your_ghl_api_key
GHL_LOCATION_ID=your_location_id
GHL_PIPELINE_ID=your_abm_pipeline_id
GHL_STAGE_ID_ENGAGED=your_engaged_stage_id
GHL_STAGE_ID_MEETING=your_meeting_stage_id
GHL_STAGE_ID_PILOT_LIVE=your_pilot_stage_id
GHL_STAGE_ID_EXPANSION=your_expansion_stage_id
GHL_CF_ACCOUNT_ID=your_account_id_field_id
GHL_CF_ACCOUNT_NAME=your_account_name_field_id
GHL_CF_ABM_STAGE=your_abm_stage_field_id
GHL_CF_ICP_SCORE=your_icp_score_field_id
GHL_CF_INTENT_SCORE=your_intent_score_field_id

# ClickUp Integration
CLICKUP_API_TOKEN=your_clickup_api_token
CLICKUP_LIST_ID_INTENT=your_intent_monitoring_list_id
CLICKUP_LIST_ID_CAMPAIGNS=your_campaigns_list_id

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (Prisma)
DATABASE_URL=postgresql://username:password@localhost:5432/profiler_abm

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Comma-separated list of enabled features
FEATURE_FLAGS=abm_enabled,intent_monitoring,weekly_digests

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

NODE_ENV=development

# =============================================================================
# QUICK START INSTRUCTIONS
# =============================================================================

# 1. Copy this file to .env
# 2. Generate ABM_TOKEN: openssl rand -base64 32
# 3. Generate ABM_HMAC_SECRET: openssl rand -base64 32
# 4. Set NEXT_PUBLIC_SITE_URL to your domain
# 5. Configure database connection
# 6. Run: pnpm prisma migrate dev
# 7. Run: pnpm ts-node scripts/seed-abm.ts
# 8. Start: pnpm dev
# 9. Visit: https://your-domain.com/abm/hub

# =============================================================================
# SECURITY NOTES
# =============================================================================

# - Never commit .env files to version control
# - Use strong, random tokens for ABM_TOKEN and ABM_HMAC_SECRET
# - Rotate tokens regularly in production
# - Use HTTPS in production
# - Consider using a secrets management service for production
